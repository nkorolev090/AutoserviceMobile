<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorOnPrimary"
    tools:context=".ui.profile.userdata.UserDataFragment">

    <com.project.autoservicemobile.ui.customViews.AppBar
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftIcon="@drawable/ic_arrow_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleText="@string/map_title" />

    <com.yandex.mapkit.mapview.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.project.autoservicemobile.ui.customViews.BottomSheetContainer
        android:id="@+id/bottomSheetContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        app:background="@drawable/bottom_sheet_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/coordinatesContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/coordinates_bg"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >

            <TextView
                android:id="@+id/stationCoordinates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/be_vietnam_pro_regular"
                android:textColor="?attr/colorSecondaryVariant"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="55.12341, 55.12341" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/stationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            style="@style/textPrimary"
            tools:text="Автосервис 37"
            app:layout_constraintTop_toBottomOf="@id/coordinatesContainer"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/stationAdress"
            style="@style/textSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toBottomOf="@+id/stationTitle"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="ул. Мархлевского, д. 123" />

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/puller"
            app:layout_constraintTop_toBottomOf="@id/stationTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/stationSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/be_vietnam_pro_regular"
            android:textColor="?attr/colorSecondaryVariant"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/separator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Будни: 8:00-16:00\nВыходные: 8:00-16:00" />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/bottomShimmerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/coordinatesShimmer"
                    android:layout_width="140dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/secondary_bg"
                    android:paddingTop="3dp"
                    android:paddingBottom="5dp"
                    android:paddingHorizontal="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <View
                    android:id="@+id/stationShimmer"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/secondary_bg"
                    app:layout_constraintTop_toBottomOf="@id/coordinatesShimmer"
                    app:layout_constraintStart_toStartOf="parent" />

                <View
                    android:id="@+id/stationAdressShimmer"
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:background="@drawable/secondary_bg"
                    app:layout_constraintBottom_toBottomOf="@+id/stationShimmer"
                    app:layout_constraintEnd_toEndOf="parent" />

                <View
                    android:id="@+id/stationScheduleShimmer"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/secondary_bg"
                    app:layout_constraintTop_toBottomOf="@id/stationAdressShimmer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

    </com.project.autoservicemobile.ui.customViews.BottomSheetContainer>

</androidx.constraintlayout.widget.ConstraintLayout>