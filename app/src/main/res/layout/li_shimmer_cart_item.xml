<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="20dp"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/card_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="2dp"
        android:background="@drawable/primary_bg_rounded"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator">
    </View>

    <View
        android:id="@+id/titleText"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:background="@drawable/primary_bg_rounded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/primary_bg_rounded"
        app:layout_constraintTop_toBottomOf="@id/titleText"/>

    <View
        android:id="@+id/priceText"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/primary_bg_rounded"
        app:layout_constraintBottom_toBottomOf="@+id/deleteBtn"
        app:layout_constraintEnd_toStartOf="@+id/deleteBtn"
        app:layout_constraintTop_toTopOf="@+id/deleteBtn"/>

    <View
        android:id="@+id/mechanicText"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:background="@drawable/primary_bg_rounded"
        app:layout_constraintBottom_toTopOf="@+id/deleteBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator"
        tools:text="Иванов" />

    <View
        android:id="@+id/mechanicSeparator"
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/primary_bg_rounded"
        app:layout_constraintBottom_toBottomOf="@+id/mechanicText"
        app:layout_constraintEnd_toStartOf="@+id/mechanicText"
        app:layout_constraintTop_toTopOf="@+id/mechanicText" />

    <View
        android:id="@+id/timeText"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/primary_bg_rounded"
        app:layout_constraintTop_toTopOf="@+id/mechanicText"
        app:layout_constraintBottom_toBottomOf="@+id/mechanicText"
        app:layout_constraintEnd_toStartOf="@+id/mechanicSeparator"/>

    <View
        android:id="@+id/deleteBtn"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:background="@drawable/primary_bg_rounded"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/favourites_btn"
        android:layout_width="26dp"
        android:layout_height="26dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/primary_bg_rounded"/>

</androidx.constraintlayout.widget.ConstraintLayout>