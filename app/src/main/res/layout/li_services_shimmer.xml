<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="20dp"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/card_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="2dp"
        android:background="@drawable/secondary_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </View>

    <View
        android:id="@+id/titleText"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/secondary_bg"
        app:layout_constraintEnd_toStartOf="@id/favourites_btn"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Заменатормозных колодок" />

    <View
        android:id="@+id/priceText"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/secondary_bg"
        app:layout_constraintBottom_toBottomOf="@+id/cartBtn"
        app:layout_constraintEnd_toStartOf="@+id/cartBtn"
        app:layout_constraintTop_toTopOf="@+id/cartBtn"/>

    <View
        android:id="@+id/cartBtn"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:background="@drawable/secondary_bg"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/favourites_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/secondary_bg"/>

</androidx.constraintlayout.widget.ConstraintLayout>