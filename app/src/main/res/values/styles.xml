<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonPrimary">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/be_vietnam_pro_medium</item>
    </style>
    <style name="buttonSecondary">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/be_vietnam_pro_medium</item>
    </style>
    <style name="textPrimary">
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:fontFamily">@font/be_vietnam_pro_bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="textSecondary">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/be_vietnam_pro_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="textError">
        <item name="android:textColor">?attr/colorOnError</item>
        <item name="android:fontFamily">@font/be_vietnam_pro_bold</item>
        <item name="android:textSize">62sp</item>
