<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AutoserviceMobile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_300</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/gray_800</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_700</item>
        <item name="colorSecondaryVariant">@color/gray_200</item>
        <item name="colorOnSecondary">@color/gray_300</item>
        <item name="colorOnContainer">@color/gray_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
<!--        <item name="android:windowLightStatusBar">@color/white</item>-->
        <item name="android:navigationBarColor">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
    </style>
</resources>